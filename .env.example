# vCenter Connection Settings
VCENTER_SERVER=vcenter.example.com
VCENTER_USER=administrator@vsphere.local
VCENTER_PASSWORD=your-secure-password
VCENTER_DATACENTER=Datacenter1
VCENTER_CLUSTER=Cluster1
VCENTER_DATASTORE=datastore1
VCENTER_NETWORK="VM Network"
VCENTER_FOLDER=Templates
VCENTER_RESOURCE_POOL=""

# Ansible Configuration
# Generate with: ssh-keygen -t rsa -b 4096 -C "ansible@example.com"
ANSIBLE_PUBLIC_KEY="ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... ansible@example.com"
ANSIBLE_USER_PASSWORD=change-this-secure-password

# VM Configuration (Optional - defaults defined in variables.pkr.hcl)
VM_CPU_COUNT=2
VM_MEMORY_MB=4096
VM_DISK_SIZE_GB=64
VM_NETWORK_CARD=vmxnet3
VM_DISK_CONTROLLER_TYPE=pvscsi
VM_FIRMWARE=efi

# Build Configuration (Optional)
BOOT_WAIT=10s
SSH_TIMEOUT=30m
SHUTDOWN_TIMEOUT=15m

# Template Naming (Optional)
# Templates will be named: {OS}-template-{timestamp}
# Example: debian-12-template-2024-01-15-1430
